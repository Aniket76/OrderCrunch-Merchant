<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.ordercrunch.ordercrunchmerchant.Fragment_address">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/details_address_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:lineSpacingExtra="5dp"
                    android:text="Address"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/details_shopno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_address_txt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Shop no, Street"
                        android:inputType="textCapWords|textPostalAddress"
                        />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/details_shopno_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_shopno"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="-8dp"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:lineSpacingExtra="5dp"
                    android:text="Reataurant Information"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/details_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_shopno_txt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Location"
                        android:inputType="textCapWords"
                        />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/details_location_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_location"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="-8dp"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:lineSpacingExtra="5dp"
                    android:text="Reataurant Information"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/details_landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_location_txt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Land Mark"
                        android:inputType="textCapWords" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/details_landmark_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_landmark"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="-8dp"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:lineSpacingExtra="5dp"
                    android:text="Reataurant Information"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/details_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_landmark_txt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="PinCode"
                        android:inputType="number"
                        android:maxLength="6" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/details_pin_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_pin"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="-8dp"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:lineSpacingExtra="5dp"
                    android:text="Reataurant Information"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />


                <LinearLayout
                    android:id="@+id/address_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_pin_txt"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp">

                    <Spinner
                        android:id="@+id/state_spinner"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/city_spinner"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_addAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/address_linear"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/colorAccent"
                    android:text="Add Address"
                    android:textColor="#ffffff" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
