<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.ordercrunch.ordercrunchmerchant.Fragment_restaurantDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/details_txt_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:lineSpacingExtra="5dp"
                    android:text="Enter Your Restaurant Details"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/details_txt_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_txt_intro"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:lineSpacingExtra="5dp"
                    android:text="All star mark (*) fields are mandatory. You can change the filds any time you want"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/details_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_txt_tag"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Restaurant Name *"
                        android:inputType="textCapWords" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/details_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_name"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="-8dp"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:lineSpacingExtra="5dp"
                    android:text="Ex. : Marufaz"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/details_tagLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_name_txt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tag Line"
                        android:inputType="textCapWords" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/details_tagLine_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_tagLine"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="-8dp"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:lineSpacingExtra="5dp"
                    android:text="Ex. : Dawat-e-Mughlai"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/details_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_tagLine_txt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email *"
                        android:inputType="textEmailAddress" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/details_email_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_email"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="-8dp"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:lineSpacingExtra="5dp"
                    android:text="Ex. : yourrestro@domain.com"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/details_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_email_txt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Website"
                        android:inputType="textUri" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/details_website_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_website"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="-8dp"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:lineSpacingExtra="5dp"
                    android:text="Ex. : www.yourrestro.com"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />

                <RelativeLayout
                    android:id="@+id/phoneNumber_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_website_txt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                    android:id="@+id/details_phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number *"
                    android:inputType="phone"/>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/details_phone_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details_phoneNumber"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="28dp"
                        android:layout_marginTop="-8dp"
                        android:fontFamily="@font/josefinsans_semibold"
                        android:lineSpacingExtra="5dp"
                        android:text="Verified Phone Number. Reverify if you want to change."
                        android:textColor="#9e9e9e"
                        android:textSize="10sp" />

                    <ImageView
                        android:id="@+id/details_changeNumber"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:paddingTop="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="8dp"
                        android:src="@drawable/ic_create_black_18dp"/>


                </RelativeLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/details_alterPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phoneNumber_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alternative Phone Number"
                        android:inputType="phone"
                        android:maxLength="13" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/details_alterPhoneNumber_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_alterPhoneNumber"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="-8dp"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:lineSpacingExtra="5dp"
                    android:text="Ex. : +9199******01"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/details_cuisines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_alterPhoneNumber_txt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Cuisines *"
                        android:inputType="textCapWords"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/details_cuisines_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_cuisines"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="-8dp"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:lineSpacingExtra="5dp"
                    android:text="Ex. : Indian, Chinese, Cafe, etc."
                    android:textColor="#9e9e9e"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/details_servises_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_cuisines_txt"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:lineSpacingExtra="5dp"
                    android:text="Servises *"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/servise1_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/details_servises_txt"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp">

                    <CheckBox
                        android:id="@+id/details_dinein"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="DineIn"
                        android:textSize="20sp"
                        android:fontFamily="@font/josefinsans_regular"
                        android:layout_weight="1"/>

                    <CheckBox
                        android:id="@+id/details_takeaway"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Take Away"
                        android:textSize="20sp"
                        android:fontFamily="@font/josefinsans_regular"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/servise2_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/servise1_layout"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp">

                    <CheckBox
                        android:id="@+id/details_homedelivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Home Delivery"
                        android:textSize="20sp"
                        android:fontFamily="@font/josefinsans_regular"
                        android:layout_weight="1"/>

                    <CheckBox
                        android:id="@+id/details_onthego"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="On The Go"
                        android:textSize="20sp"
                        android:fontFamily="@font/josefinsans_regular"
                        android:layout_weight="1"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_addDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/servise2_layout"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/colorAccent"
                    android:text="Add Details"
                    android:textColor="#ffffff" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
